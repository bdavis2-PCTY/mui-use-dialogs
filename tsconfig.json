{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": false,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}